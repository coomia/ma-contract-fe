  </style>
  <script type="text/javascript" charset="utf-8" src="/static/ueditor/ueditor.config.js"></script>
  <script type="text/javascript" charset="utf-8" src="/static/ueditor/ueditor.all.min.js"> </script>
</head>
<body>
  <div id="container" class="animated fadeIn">
    <box>
      <breadcrumbs params="path:'contractsampletext'"></breadcrumbs>
      <box-filter>
        <box-sticky params="title:'合同示范文本新增'" style="font-size:18px;">
          <div class="u-col-8 text-right">
            <!-- <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.add"><span class="fa fa-plus"></span>&nbsp;新增</button> -->
            <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.save"><span class="fa fa-save"></span>&nbsp;保存</button>
            <!-- <button class="btn btn-danger btn-sm" data-bind="click: $root.deleteRows"><span class="fa fa-trash"></span>&nbsp;删除</button> -->
          </div>
        </box-sticky>
      </box-filter>
      <box-content params="title:'基本信息'" id="basic">
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right"><span class="required">*</span> 合同类型 : </label>
          <div class="u-col-4">
            <input type="text" class="u-form-control" data-bind="value: $root.model.ref('contracttypeName')">
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right"><span class="required">*</span> 示范文本编码 : </label>
          <div class="u-col-4">
            <input type="text" class="u-form-control" data-bind="value: $root.model.ref('code')">
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right"><span class="required">*</span> 示范文本名称 : </label>
          <div class="u-col-4">
            <input type="text" class="u-form-control" data-bind="value: $root.model.ref('name')">
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right"><span class="required">*</span> 版本号 : </label>
          <div class="u-col-4">
            <input type="text" class="u-form-control" data-bind="value: $root.model.ref('version')">
          </div>
        </div>
      </box-content>
      <box-content params="title:'正文信息'" id="claim">
        <script id="editor" type="text/plain" style="width:100%;height:300px;">
        </script>
      </box-content>
    </box>
  </div>

<style>
  #treebill .ztree {
    overflow: hidden;
  }
</style>

  <% if (htmlWebpackPlugin.options.files.js) { %>
    <% htmlWebpackPlugin.options.files.js.forEach(function(name){ %>
      <script type="text/javascript" src="<%= name %>"></script>
    <% }) %>
  <% } %>
</body>
</html>