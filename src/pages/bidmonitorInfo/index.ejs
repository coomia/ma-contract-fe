<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>
			<%= htmlWebpackPlugin.options.title %>
		</title>
		<% if (htmlWebpackPlugin.options.files.css) { %>
		<% htmlWebpackPlugin.options.files.css.forEach(function(name){ %>
		<link rel="stylesheet" type="text/css" href="<%= name %>">
		<% }) %>
		<% } %>
	</head>

	<body>
		<div id="container" class="animated fadeIn">
			<box>
				<breadcrumbs params="path:'bdmonitorIf'"></breadcrumbs>
				<box-content>
					<div class="pull-right">
						<!--<button class="btn btn-primary btn-sm  m-r-sm" data-bind="click:$root.preqlfSubmit">踢出竞价</button>-->
						<a class="btn btn-outline btn-sm  m-r-sm" data-bind="click:function () { return window.history.go(-1)}"><span class="fa fa-reply"></span>返回</a>
					</div>
					<div class="u-row">
						<div class="clearfix margin-bottom-5">
							<div class="pull-left u-col-2">
								<strong data-bind="text:$root.model.ref('supplyName')"></strong><strong>供应商</strong>: 
								<span data-bind="text:$root.model.ref('isquote')()?'在线':'离线'" style="background-color:red;color:white"></span>
							</div>
						</div>
					</div>
					<div class="u-row">
						<div class="clearfix margin-bottom-5">
							<div class="pull-left u-col-12 " style="line-height: 45px;">
								<div class="pull-left u-col-3">
									<span>最新报价时间:</span> <span data-bind="text:$root.model.ref('bidTime')"></span>
								</div>
								<div class="pull-left u-col-2">
									<span>报价轮次:</span> <span data-bind="text:$root.model.ref('bidRound')"></span>
								</div>
								<div class="pull-left u-col-2">
									<a class="btn btn-outline btn-sm  m-r-sm" data-bind="click:$root.historyPrice">查看历史报价</a>
								</div>
							</div>
						</div>
						<div class="u-row">
							<div class="clearfix margin-bottom-10" >
								<div class="pull-left u-col-12 " style="margin-left:15px">
									<div class="pull-left u-col-2">
										<span>最新报价:</span> <span data-bind = "text:$root.model.ref('latestPrice')"></span>
									</div>
									<div class="pull-left u-col-2">
										<span>降幅:</span> <span data-bind = "text:$root.model.ref('range')"></span>
									</div>
								</div>
							</div>
						</div>
						<div class="u-row">
							<div class="clearfix margin-bottom-10" >
								<div class="pull-left u-col-12 " style="margin-left:15px">
								<div class="pull-left u-col-5">
									<span>初始报价:</span> <span data-bind = "text:$root.model.ref('initPrice')"></span>
								</div>
							</div>
							</div>
						</div>
				</box-content>
				 <box-content>
					<div class=" clearfix margin-bottom-10">
						<strong class="pull-left u-from-static">
								报价 &nbsp;&nbsp;<label class="badge color-waring"></label>
						</strong>
					</div>
					<u-grid params="config: $root.detail_grid">

					</u-grid>
					<div class="u-row">
							<div class="clearfix margin-bottom-10 margin-top-10" >
								<div class="pull-right" style="margin-right:15px">
								<div class="pull-right">
									<span>产品总价:</span> <span style="color:red" data-bind = "text:parseFloat($root.model.ref('bidPrice')()||0)-parseFloat($root.model.ref('freight')()||0)"></span>
								</div>
							</div>
							</div>
						</div>
					<div class="u-row">
							<div class="clearfix margin-bottom-10" >
								<div class="pull-right" style="margin-right:15px">
								<div class="pull-right" style="margin-right:30px">
									<span>物流费用:</span> <span style="color:red" data-bind = "text:$root.model.ref('freight')()==null? 0 : $root.model.ref('freight')"></span>
								</div>
							</div>
							</div>
					</div>
					<div class="u-row">
							<div class="clearfix margin-bottom-10" >
								<div class="pull-right" style="margin-right:15px">
								<div class="pull-right">
									<span>合计金额:</span> <span style="color:red" data-bind = "text:$root.model.ref('bidPrice')"></span>
								</div>
							</div>
							</div>
					</div>
				</box-content>
			</box>
			</div>

			<% if (htmlWebpackPlugin.options.files.js) { %>
			<% htmlWebpackPlugin.options.files.js.forEach(function(name){ %>
			<script type="text/javascript" src="<%= name %>"></script>
			<% }) %>
			<% } %>
	</body>

</html>