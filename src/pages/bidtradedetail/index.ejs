<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>
    <%= htmlWebpackPlugin.options.title %>
  </title>
  <% if (htmlWebpackPlugin.options.files.css) { %>
    <% htmlWebpackPlugin.options.files.css.forEach(function(name){ %>
      <link rel="stylesheet" type="text/css" href="<%= name %>">
    <% }) %>
  <% } %>
</head>

<body>
  <div id="container" class="animated fadeIn">
    <box>
      <breadcrumbs params="path:'btDetail'"></breadcrumbs>
      <box-sticky params="title:'竞价单'" style="font-size:18px;">
        <div class="u-col-6 text-center">
        </div>
        <div class="u-col-4 text-right">
          <a id='signId' class="btn btn-outline btn-sm  m-r-sm button-outline" data-bind = "click:function () { return window.history.go(-1)}">返回</a>
        </div>
      </box-sticky>
      <box-content params="title:$root.titleList[0]">
        <div class="u-form-group" id="basic_information">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            标题
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('title')" ></span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            采购企业
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('purchaseEn')" ></span>
          </div>
        </div>
        <label class="u-col-12 text-left">物资信息</label>
        <u-grid params="config: $root.materialListCfg"></u-grid>
      </box-content>

      <box-content params="title: $root.titleList[2]">
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            经营模式
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.supBusiModeOpt($root.model.getValue('supBusinessMode'))"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            业务覆盖范围
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('supBusinessScope')"></span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            注册资金
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('supRegisterMoney')"></span><span class="fontgrey" style="margin-left:30px;">元以上</span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 text-right u-form-label">
            收货地址
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.deliverAddr($root.model.getValue('deliveryAddress'))"></span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            竞标保证金
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('bidDeposit')"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            付款方式
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('paytype')"></span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            交货条件
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('deliveryCon')"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            证件要求
          </label>
          <div class="u-col-3 line-36">
             <span data-bind="text: $root.supCertReqOpt($root.model.getValue('supCertificateRequire'))"></span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            发票要求
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.supInvoiceOpt($root.model.getValue('supInvoiceRequire'))"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            竞价附件
          </label>
          <div class="u-col-9 marTop-16 text-left">
          	<filesupload params="bidtradeId:$root.model.ref('bidtradeId'),callbackDatas:function(data){techAttachList(data)},groupname:'bidtrade_editor',readonly:true,id:$root.model.ref('id'), index:0">
						</filesupload>
          </div>
          <div class="u-col-6"></div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            其他要求
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.model.ref('supOtherRequire')"></span>
          </div>
        </div>
      </box-content>

      <box-content params="title: $root.titleList[3]">
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            报名截止时间
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('registEndTime')"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            竞价开始时间
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('bidStartTime')"></span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            限时名次
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('promptList')"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            竞价时长
          </label>
          <div class="u-col-3 line-36 ">
            <span data-bind="text: $root.model.ref('biddingTime')"></span><span class="fontgrey" style="margin-left:30px;">分钟</span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            延迟时长
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('delayTime')"></span><span class="fontgrey" style="margin-left:30px;">分钟</span>
          </div>
        </div>
        <div class="u-form-group">
          <!--<label class="u-col-2 u-form-group-sm u-form-label text-right">
            竞价方式
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.bidTypeOpt($root.model.getValue('bidType'))"></span>
          </div>-->
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            最小价格步长
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('lowBiddingStep')"></span></span><span class="fontgrey" style="margin-left:30px;">元</span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            最高限价
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('highPrice')"></span><span class="fontgrey" style="margin-left:30px;">元</span>
          </div>
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            最低限价
          </label>
          <div class="u-col-3 line-36">
            <span data-bind="text: $root.model.ref('lowPrice')"></span><span class="fontgrey" style="margin-left:30px;">元</span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            竞价过程
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.bidProcessOpt($root.model.getValue('bidProcess'))"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            资格审核
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.preQualificationOpt($root.model.getValue('qualifiedAudit'))"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            监督人
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.model.ref('supervisorName')"></span>
          </div>
        </div>
      </box-content>

      <box-content params="title: $root.titleList[4]">
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            报价模式
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.quoteModeOpt($root.model.getValue('quoteMode'))"></span>
          </div>
        </div>
        <!--<u-grid id='templete_list' params="visible:$root.model.getValue('quoteMode')== 1,config: $root.templeteListCfg"></u-grid>-->
        <u-grid id='materialList' params="visible:$root.model.getValue('quoteMode')== 2,config: $root.materialListCfg1"></u-grid>
      </box-content>

      <box-content params="title: $root.titleList[5]">
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            询价范围
          </label>
          <div class="u-col-6 line-36" id="div_iqSO">
            <span data-bind="text: $root.inquiryScopeOpt($root.model.getValue('inquiryScope'))"></span>
          </div>
        </div>
        <div id="bd_inquirytype" class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            询价方式
          </label>
          <div class="u-col-10 line-36">
            <span data-bind="html: $root.inquiryTypeOpt($root.model.getValue('inquiryType'))"></span>
          </div>
        </div>
        <!--<div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            供应商
          </label>
          <div class="u-col-6" data-bind="foreach: { data: $root.supplierModel.rows(), as: 'row' }">
            <span class="u-tag u-tag-info" style="color: white; margin-right: 10px;" data-bind="text: row.ref('supEnterpriseName')"></span>
          </div>
        </div>-->
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            联系方式
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.contactTypeOpt($root.model.getValue('contactType'))"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            联系人
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.model.ref('contact')"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            联系电话
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.model.ref('tel')"></span>
          </div>
        </div>
        <div class="u-form-group">
          <label class="u-col-2 u-form-group-sm u-form-label text-right">
            邮件地址
          </label>
          <div class="u-col-6 line-36">
            <span data-bind="text: $root.model.ref('email')"></span>
          </div>
        </div>
      </box-content>
    </box>
  </div>

  <% if (htmlWebpackPlugin.options.files.js) { %>
    <% htmlWebpackPlugin.options.files.js.forEach(function(name){ %>
      <script type="text/javascript" src="<%= name %>"></script>
    <% }) %>
  <% } %>
</body>
</html>
